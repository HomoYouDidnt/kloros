[Unit]
Description=KLoROS Voice Emotion Zooid - Sentiment analysis and affective state modeling
After=network.target kloros-chem-proxy.service
Requires=kloros-chem-proxy.service
Documentation=file:///home/kloros/docs/plans/2025-11-23-voice-zooid-refactoring-design.md

[Service]
Type=simple
User=kloros
Group=kloros
WorkingDirectory=/home/kloros

Environment=PYTHONPATH=/home/kloros/src:/home/kloros
Environment=KLR_ENABLE_EMOTION=1

ExecStart=/home/kloros/.venv/bin/python3 -u /home/kloros/src/kloros_voice_emotion.py

Restart=always
RestartSec=5

StandardOutput=journal
StandardError=journal
SyslogIdentifier=kloros-voice-emotion

MemoryMax=512M
CPUQuota=50%

PrivateTmp=false
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
