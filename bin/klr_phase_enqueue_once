#!/usr/bin/env python3
import sys
sys.path.insert(0, "/home/kloros/src")

from kloros.phase.batch_selector import enqueue_phase_batches
from kloros.registry.lifecycle_registry import load_lifecycle_policy

if __name__ == "__main__":
    emitted = enqueue_phase_batches(load_lifecycle_policy())
    print(f"Enqueued {len(emitted)} batches")
    for niche, candidates in emitted:
        print(f"  - {niche}: {len(candidates)} candidates")
