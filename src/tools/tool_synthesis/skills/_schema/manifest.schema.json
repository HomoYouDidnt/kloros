{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "name",
    "version",
    "io",
    "permissions",
    "constraints",
    "deployment"
  ],
  "properties": {
    "name": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "summary": {
      "type": "string"
    },
    "category": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "intent_tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "planning": {
      "type": "object",
      "properties": {
        "when_to_use": {
          "type": "string"
        },
        "do_not_use_when": {
          "type": "string"
        },
        "preconditions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "postconditions": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "io": {
      "type": "object",
      "required": [
        "input_model",
        "output_model"
      ],
      "properties": {
        "input_model": {
          "type": "string"
        },
        "output_model": {
          "type": "string"
        }
      }
    },
    "permissions": {
      "type": "object"
    },
    "constraints": {
      "type": "object"
    },
    "retries": {
      "type": "object",
      "properties": {
        "attempts": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5
        }
      }
    },
    "fallbacks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "skill": {
            "type": "string"
          }
        }
      }
    },
    "deployment": {
      "type": "object",
      "required": [
        "registration_key",
        "visibility"
      ],
      "properties": {
        "registration_key": {
          "type": "string"
        },
        "visibility": {
          "enum": [
            "masked",
            "public"
          ]
        },
        "mask_rules": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "error_taxonomy": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "code",
          "remediation"
        ],
        "properties": {
          "code": {
            "type": "string",
            "enum": [
              "RATE_LIMIT",
              "UPSTREAM",
              "TIMEOUT",
              "AUTH",
              "NOT_FOUND",
              "VALIDATION",
              "UNKNOWN"
            ]
          },
          "remediation": {
            "type": "string",
            "description": "Strategy like 'fallback:skill_name' or 'retry_then_fallback:skill_name'"
          }
        }
      }
    },
    "slo": {
      "type": "object",
      "properties": {
        "min_calls": {
          "type": "integer",
          "minimum": 1,
          "description": "Minimum number of calls required before promotion"
        },
        "p95_latency_ms": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum acceptable p95 latency in milliseconds"
        },
        "max_error_rate": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "Maximum acceptable error rate (0.0-1.0)"
        },
        "max_cost_usd_per_100_calls": {
          "type": "number",
          "minimum": 0.0,
          "description": "Maximum cost in USD per 100 calls"
        }
      }
    }
  }
}