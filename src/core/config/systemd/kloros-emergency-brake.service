[Unit]
Description=KLoROS Emergency Brake (Tier 0 - PANIC/CRITICAL_FATIGUE)
After=network.target kloros-chem-proxy.service
Requires=kloros-chem-proxy.service

[Service]
Type=simple
User=kloros
WorkingDirectory=/home/kloros/src
Environment=PYTHONPATH=/home/kloros/src
ExecStart=/home/kloros/.venv/bin/python -u consciousness/emergency_brake.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
